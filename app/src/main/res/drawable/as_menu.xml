<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/open"
        android:drawable="@drawable/ic_menu_closed"
        android:state_checked="true" />

    <item
        android:id="@+id/closed"
        android:drawable="@drawable/ic_menu" />

    <transition
        android:drawable="@drawable/av_menu_close"
        android:fromId="@id/open"
        android:toId="@id/closed" />

    <transition
        android:drawable="@drawable/av_menu_open"
        android:fromId="@id/closed"
        android:toId="@id/open" />

</animated-selector>